<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <welcome-file-list>
        <welcome-file>register.jsp</welcome-file>
    </welcome-file-list>

    <!-- Register Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.enrollment.servlet.RegisterServlet</servlet-class>
    </servlet>
    

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.enrollment.servlet.LoginServlet</servlet-class>
    </servlet>
    
    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.enrollment.servlet.DashboardServlet</servlet-class>
    </servlet>
    
    <!-- Enroll Servlet -->
    <servlet>
        <servlet-name>EnrollServlet</servlet-name>
        <servlet-class>com.enrollment.servlet.EnrollServlet</servlet-class>
    </servlet>
   

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.enrollment.servlet.LogoutServlet</servlet-class>
    </servlet>
   
    <!-- Add Course Servlet -->
    <servlet>
        <servlet-name>AddCourseServlet</servlet-name>
        <servlet-class>com.enrollment.servlet.AddCourseServlet</servlet-class>
    </servlet>
    
    <!-- Delete Course Servlet -->
    <servlet>
        <servlet-name>DeleteCourseServlet</servlet-name>
        <servlet-class>com.enrollment.servlet.DeleteCourseServlet</servlet-class>
    </servlet>
    

    <!-- Delete Enrollment Servlet -->
    <servlet>
        <servlet-name>DeleteEnrollmentServlet</servlet-name>
        <servlet-class>com.enrollment.servlet.DeleteEnrollmentServlet</servlet-class>
    </servlet>
    
</web-app>
